{
  "name": "mfm",
  "description": "A file manager written in Svelte, HTML, and CSS running in NW.js.",
  "license": "MIT",
  "version": "1.0.0",
  "chromium-args": "--allow-file-access-from-files --allow-file-access --user-data-dir",
  "window": {
    "id": "mfm",
    "height": 300,
    "width": 500,
    "show_in_taskbar": true,
    "frame": true,
    "show": true,
    "transparent": false
  },
  "main": "index.html",
  "node-remote": "<all_urls>",
  "nodejs": true
}
